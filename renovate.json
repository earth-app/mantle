{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "dependencyDashboard": false,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ]
    }
  ],
  "hostRules": [
    {
      "matchHost": "https://npm.pkg.github.com",
      "token": "{{ secrets.GITHUB_TOKEN }}"
    }
  ],
  "npmrc": "@earth-app:registry=https://npm.pkg.github.com"
}